<!-- Validation failure messages -->
<% if @country.errors.any? %>
  <% @country.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit country #<%= @country.id %>
</h1>

<hr>

<!-- Form country start -->
<form action="/update_country/<%= @country.id %>" method="post">
<!-- Form country end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @country.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <button class="btn btn-block btn-outline-secondary">
    Update country
  </button>
</form>

<hr>

<a href="/countries">
  Go back
</a>
