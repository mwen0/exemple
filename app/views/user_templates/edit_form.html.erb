<h1>
  Edit user #<%= @user.id %>
</h1>

<hr>

<!-- Form user start -->
<form action="/update_user/<%= @user.id %>" method="post">
<!-- Form user end -->

  <!-- Label and input for address_id start -->
  <div class="form-group">
    <label for="address_id">
      Address
    </label>

    <!-- Input for address_id start -->
    <input type="text" id="address_id" name="address_id" class="form-control" value="<%= @user.address_id %>">
    <!-- Input for address_id end -->
  </div>
  <!-- Label and input for address_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update user
  </button>
</form>

<hr>

<a href="/users">
  Go back
</a>
