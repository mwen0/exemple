<!-- Validation failure messages -->
<% if @address.present? %>
  <% if @address.errors.any? %>
    <% @address.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new address
</h1>


<hr>

<!-- Form address start -->
<form action="/create_address" method="post">
<!-- Form address end -->

  <!-- Label and input for country_id start -->
  <div class="form-group">
    <label for="country_id">
      Country
    </label>

    <!-- Input for country_id start -->
    <%= select_tag(:country_id, options_from_collection_for_select(Country.all, :id, :name, @address.country_id), :class => "form-control") %>
    <!-- Input for country_id end -->
  </div>
  <!-- Label and input for country_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create address
  </button>
</form>

<hr>

<a href="/addresses">
  Go back
</a>
