<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All addresses
    </h1>

    <a href="/addresses/new" class="btn btn-block btn-outline-secondary">
      Add a new address
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Country
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @addresses.each do |address| %>
      <tr>
        <!-- Display address.id start -->
        <td>
          <%= address.id %>
        </td>
        <!-- Display address.id end -->

        <!-- Display address.country_id start -->
        <td>
          <% if address.country.present? %>
            <a href="/countries/<%= address.country.id %>">
              <%= address.country.name %>
            </a>
          <% end %>
        </td>
        <!-- Display address.country_id end -->

        <!-- Display address.created_at start -->
        <td>
          <%= time_ago_in_words(address.created_at) %> ago
        </td>
        <!-- Display address.created_at end -->

        <!-- Display address.updated_at start -->
        <td>
          <%= time_ago_in_words(address.updated_at) %> ago
        </td>
        <!-- Display address.updated_at end -->

        <td>
          <a href="/addresses/<%= address.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @addresses, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
